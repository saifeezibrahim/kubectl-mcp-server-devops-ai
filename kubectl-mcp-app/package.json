{
  "name": "kubectl-mcp-app",
  "version": "1.0.0",
  "description": "Interactive UI add-on for kubectl-mcp-server using MCP ext-apps SDK",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "kubectl-mcp-app": "dist/main.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:ui": "node scripts/build-ui.js",
    "build:server": "tsc -p tsconfig.server.json",
    "build:cli": "tsc -p tsconfig.server.json && node scripts/add-shebang.js",
    "build": "npm run build:ui && npm run build:server && npm run build:cli",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:server\"",
    "dev:ui": "UI_APP=pods vite build --watch",
    "dev:server": "tsc -p tsconfig.server.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "kubernetes",
    "kubectl",
    "ui",
    "dashboard",
    "model-context-protocol",
    "claude",
    "ai"
  ],
  "author": "Rohit Ghumare <ghumare64@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohitg00/kubectl-mcp-server.git",
    "directory": "kubectl-mcp-app"
  },
  "bugs": {
    "url": "https://github.com/rohitg00/kubectl-mcp-server/issues"
  },
  "homepage": "https://github.com/rohitg00/kubectl-mcp-server/tree/main/kubectl-mcp-app#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "concurrently": "^9.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "kubectl-mcp-server": ">=1.21.0"
  },
  "peerDependenciesMeta": {
    "kubectl-mcp-server": {
      "optional": true
    }
  }
}
